}
\examples{
\dontrun{
  data(example_out)
  twopt <- rf.2pts(example_out)
  markers <- make.seq(twopt,c(12,14,15,26,28))
  markers.comp <- compare(markers)
  markers.comp <- compare(markers,verbose=TRUE)
  markers.comp
}
}
